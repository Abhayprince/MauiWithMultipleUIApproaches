        <Label 
            Text="Welcome to .NET MAUI! XAML Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="Black"/>
        <Button Text="Click Me" x:Name="btn" Clicked="btn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>